pipeline
{
  agent any
    triggers
    {
      cron('* * * * *')
    }
    stages
    {
      stage('checkout')
      {
        steps
        {
          git branch:'main',url:'https://github.com/1ms24mc007-dot/smartcity'
        }
      }
      stage('Compile')
      {
        steps
        {
          echo "Compiling of the java file"
          sh "javac javafile.java"
        }
      }
      stage('Run')
      {
        steps
          {
            echo "Executing the java file"
            sh "java javafile"
          }
      }
      stage('Running Python file')
      {
        steps
        {
          echo 'Running python file'
          sh 'python3 pythonfile.py'
        }
      }
    }
      post
      {
        success
        {
          echo "Successfull!"
        }
        failure
        {
          echo "Failure!"
        }
      }
}
